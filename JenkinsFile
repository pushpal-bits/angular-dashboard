pipeline {
  agent any
  stages {
    stage('Install') {
      steps { sh 'npm install' }
    }
     stage('Build') {
      steps { sh 'npm run-script build' }
    }

    stage('Test') {
      parallel {
        stage('Static code analysis') {
            steps { sh 'npm run-script lint' }
        }
        stage('Unit tests') {
            steps {  docker.image('angular/ngcontainer').inside {
              
       npm run test

  }
     }
        }
      }
    }
   
   
  }
}